<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting_backup">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/grnt"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="50sp"
        android:padding="25dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:textSize="25dp"
            android:textColor="#46B7F8"
            android:text="Cloud Backup"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#333"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="17dp"
            android:textColor="#333"
            android:id="@+id/opt_backup"

            android:text="Enable Cloud Backup"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

            <Switch
                android:layout_width="0dp"
                android:id="@+id/opt_switch"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textSize="17dp"
                android:textColor="#333"
                android:id="@+id/opt_restore"

                android:text="Restore Data"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="40dp"
            android:background="#333"></View>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9C9E9C"
            android:layout_marginTop="20dp"
            android:textStyle="italic"
            android:textSize="11dp"
            android:text="In order to maintain your privacy, Stockmate will use your registered email address to create an encrypted identifier for your account. We will only upload the data you have entered into your portfolio, and all data is encrypted and NEVER shared."
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="6dp"
            ></View>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#9C9E9C"
            android:layout_marginTop="10dp"
            android:textStyle="italic"
            android:textSize="11dp"
            android:text="Should you need to restore your data to a new phone, only your email address will be required."
            android:layout_height="wrap_content" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>