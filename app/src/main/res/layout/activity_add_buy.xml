<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:fitsSystemWindows="true"
 android:background="#ffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_add_buy">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/grnt"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:padding="15dp"
    android:gravity="left"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Stock Order"
        android:textColor="#000"
        android:textSize="22dp"
        android:textStyle="bold"

        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Provide details of your Stock Orders"
        android:textColor="#000"
        android:textSize="12dp"
        android:textStyle="normal"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content" />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:padding="0dp"
      android:gravity="left"
       android:layout_height="match_parent">

   <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:paddingBottom="10dp"
       android:background="#46B7F8"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:paddingTop="10dp"
        android:layout_height="wrap_content">

         <TextView
             android:layout_width="wrap_content"
             android:textColor="#A7A5A5"
             android:fontFamily="sans-serif-condensed"
             android:text="JSE Symbol"
             android:layout_height="wrap_content" />

           <com.toptoche.searchablespinnerlibrary.SearchableSpinner
               android:layout_width="match_parent"
               android:id="@+id/spin_sym"
                android:layout_weight="1"
               android:padding="0dp"
               android:layout_height="wrap_content"></com.toptoche.searchablespinnerlibrary.SearchableSpinner>
       </LinearLayout>
       <View
           android:layout_width="wrap_content"
           android:layout_height="0dp"></View>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="0dp"
           android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_weight="1"
                   android:textColor="#A7A5A5"
                   android:text="Transaction Date"
                   android:fontFamily="sans-serif-condensed"
                   android:layout_height="wrap_content" />
               <EditText
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:id="@+id/txt_date"
                   android:textColorHint="#ddd"
                   android:textColor="#000"
                   android:gravity="right"
                   android:editable="false"
                   android:hint="mm/dd/yyyy"
                   android:inputType="none"
                   android:layout_height="wrap_content" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="0dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:textColor="#A7A5A5"
               android:text="Units Bought"
               android:fontFamily="sans-serif-condensed"
               android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:id="@+id/txt_units"
               android:textColorHint="#ddd"
               android:textColor="#333"
               android:gravity="right"

               android:fontFamily="sans-serif-condensed"
               android:hint="0"
               android:inputType="number"
               android:layout_height="wrap_content" />
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="0dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:textColor="#A7A5A5"
               android:text="Unit Price"
               android:fontFamily="sans-serif-condensed"
               android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:id="@+id/txt_unit_price"
               android:textColorHint="#ddd"
               android:textColor="#333"
               android:fontFamily="sans-serif-condensed"
               android:gravity="right"
               android:hint="0.00"

               android:inputType="numberDecimal"
               android:layout_height="wrap_content"/>
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:padding="0dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_weight="1"
               android:textColor="#A7A5A5"
               android:text="Applicable Fees"
               android:fontFamily="sans-serif-condensed"
               android:layout_height="wrap_content" />
           <EditText
               android:layout_width="match_parent"
               android:layout_weight="1"
               android:id="@+id/txt_tran_fee"
               android:textColorHint="#ddd"
               android:textColor="#333"
               android:gravity="right"
               android:fontFamily="sans-serif-condensed"
               android:hint="0.00"

               android:inputType="numberDecimal"
               android:layout_height="wrap_content" />
       </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="0dp"
        android:background="@drawable/cure_white_solid"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="match_parent">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textStyle="bold"
               android:textSize="16dp"
               android:textColor="#1d3160"
               android:text="Transaction Total"
               android:fontFamily="sans-serif-condensed"
               android:layout_height="wrap_content" />
        </LinearLayout>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:textSize="23dp"
               android:id="@+id/txt_tran_total"
               android:textColorHint="#fff"
               android:textStyle="bold"
               android:textColor="#46B7F8"
               android:gravity="right"
               android:fontFamily="sans-serif-condensed"
               android:hint="0.00"
               android:text="0.00"

               android:layout_height="wrap_content" />
       </LinearLayout>
       <View
           android:layout_width="wrap_content"
           android:layout_height="10dp"></View>


   </LinearLayout>

</LinearLayout>
    </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>