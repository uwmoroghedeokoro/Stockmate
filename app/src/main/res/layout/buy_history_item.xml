<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sym_layout"
        android:layout_height="match_parent">
        <View
            android:layout_width="5dp"
            android:background="#dddccc"
            android:layout_height="wrap_content"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/buy_shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:text="0"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:textColor="#A7A5A5"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Buy Date: "
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_buy_date"
                    android:textColor="#A7A5A5"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:gravity="right"

            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/buy_price"
                    android:text="00.00"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:paddingLeft="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/bo_edit"
                    android:id="@+id/btn_edit"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25dp"
                    android:src="@drawable/bo_delete"
                    android:id="@+id/btn_del"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>