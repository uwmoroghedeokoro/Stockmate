<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sym_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/img_star"
                android:src="@drawable/star_empty"
                android:layout_height="25dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sym_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center_vertical"
                    android:text="Sym"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/txt_shares"
                    android:textColor="#A7A5A5"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="0"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textColor="#A7A5A5"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="Shares"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:gravity="right"

            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/sym_price"
                    android:text="$111.00"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/sym_change"
                android:text="+3.11%"
                android:textColor="#A7A5A5"
                android:fontFamily="sans-serif-condensed"
                android:textSize="16dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical|right"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="13dp"
                android:id="@+id/txt_change_in_price"
                android:textStyle="normal"
                android:text="$0.00"
                android:gravity="right"
                android:textColor="#fff"
                android:padding="3dp"
                android:background="@drawable/round_edge_grey"
                android:fontFamily="sans-serif-condensed"
                android:paddingRight="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>