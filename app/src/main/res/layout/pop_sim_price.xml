<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#ccc"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="@drawable/cure_white_solid"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333"

            android:textSize="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Enter a desired price for this stock and see how it would affect your Position."
            android:layout_height="wrap_content" />


    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/cure_white_solid"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="#333"
            android:text=""
            android:hint="$0.00"
            android:inputType="numberDecimal"
            android:textColorHint="#ccc"
            android:id="@+id/edt_sim_price"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="5dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:background="@drawable/cure_white_solid"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_preview"
            android:text="Preview"
            android:background="@drawable/btn_round_corners"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>