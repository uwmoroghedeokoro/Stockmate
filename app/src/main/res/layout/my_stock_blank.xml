<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#36394D"
        android:text="Stocks in Portfolio"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/curve_shape_gradient"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="#fff"
            android:text="Your portfolio is a bit empty. Start adding details of your stock purchases and things will start looking a bit better"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
</android.support.constraint.ConstraintLayout>