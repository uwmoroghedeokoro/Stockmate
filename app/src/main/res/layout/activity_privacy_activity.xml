<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".privacy_activity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/grnt"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Need some privacy?"
        android:textColor="#0B4CD8"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="12dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="12dp"
        android:textColor="#5C5B5B"
        android:text="Provide a security code required to view your portfolio."
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="22dp"></View>

    <EditText
        android:layout_width="match_parent"
        android:textSize="20dp"
        android:background="@drawable/border"
        android:inputType="number"
        android:id="@+id/pass_code"
        android:maxLength="4"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="22dp"></View>

    <Button
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:text="Save"
        android:id="@+id/pass_code_btn"
        android:textColor="#fff"
        android:background="@drawable/btn_round_corners"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>